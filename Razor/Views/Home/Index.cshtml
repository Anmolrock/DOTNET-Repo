
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body> 
    <div>
        @DateTime.Now
    </div>
    <div>
        @(7-2)
    </div>
    <div>
        @{
            var a = 1;
            var b = 2;
            var c = a + b;
            var currenttime = DateTime.Now;
            var tomorrowtime = DateTime.Now.AddDays(1);
        }
    </div>
    <label>@c</label><br />
    <label>Current Time - @currenttime</label><br />
    <label>Tomorrow Time - @tomorrowtime</label>


    <div>
        <h2>Loops:</h2>
        @{
            for (int i = 0; i<10; i++)
            {
                @i;
                <br />
            }
        }
    </div>
</body>
</html>
