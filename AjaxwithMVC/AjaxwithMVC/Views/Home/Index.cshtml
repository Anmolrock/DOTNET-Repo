@model AjaxwithMVC.Models.Employee

@{

    ViewBag.Title = "Index";
}



<div style="display:none" id="loader">
    <img src="~/Content/icegif-1262.gif" height="100" width="200" />
</div>

@using (Ajax.BeginForm("Index", FormMethod.Post,new AjaxOptions()
{
    OnSuccess = "fnSuccess",
    OnFailure = "fnFailure",
    HttpMethod = "POST",
    LoadingElementId = "loader",
    LoadingElementDuration = 2000//for animation
}))
{
    <div>
        @Html.EditorFor(x => x.FirstName)<br /><br />
        @Html.EditorFor(x => x.LastName)<br /><br />
        @Html.EditorFor(x => x.Email)<br /><br />

        <input type="submit" value="Click me" />
    </div>
}

<script language="javascript" type="text/javascript">
    
        function fnSuccess(data) {
            console.log(data);
            alert("Hello from Success");
    }

        function fnFailure(err) {
        console.log(err);
            alert("Hello from Error");
    }
    
</script>
