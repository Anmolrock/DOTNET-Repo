@model Employee
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.DisplayName("Name")<br /><br />
        @Html.DisplayNameFor(x=>x.DateofBirth)
        <hr />

        @Html.DisplayForModel()
        <hr />
        <br />
        @Html.DisplayNameFor(x=>x.Name) - @Html.EditorFor(x=>x.Name)
